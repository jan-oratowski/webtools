<PageTitle>Encode &amp; Decode with @Model?.Name</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Encode &amp; Decode with @Model?.Name</MudText>
<MudText Typo="Typo.body1">@Model?.Description</MudText>

<MudInputString @bind-Value="Model!.Input" Label="Input string:"></MudInputString>

<MudText Typo="Typo.h4">@Model?.OutputType</MudText>
<MudText Typo="Typo.body1">@Model?.Output</MudText>

<MudButton Color="Color.Primary" Variant="Variant.Filled" @onclick="Model!.Encode">Encode</MudButton>
<MudButton Color="Color.Secondary" Variant="Variant.Filled" @onclick="Model!.Decode">Decode</MudButton>


